use strict;
use warnings;
use utf8;
use open qw (:std :utf8);
use v5.14;

use lib qw (lib);
use GrowBot;

# Set the script name.
$0 = "growbot";

# The configuration file to load.
my $configFile = "config.json";

# The PID file to create.
my $pidFile = "growbot.pid";

# Create a new GrowBot using the configuration file.
my $growbot = GrowBot->new ($configFile);

# Capture SIGINT, and SIGTERM to allow for a graceful exit.
$SIG{INT} = $SIG{TERM} = sub { $growbot->close };

printf "%s %s\n", $growbot->name, $growbot->version;

# Create a PID file.
open my $pid, ">", $pidFile or die "Could not write to PID file: $!";
print $pid "$$\n";
close $pid;

# Start the GrowBot.
$growbot->start;

# Wait for the Growbot to finish.
$growbot->wait;

# Close the GrowBot.
$growbot->close;

# Remove the PID file.
unlink $pidFile or die "Count not remove PID file: $!";

printf "Done.\n";